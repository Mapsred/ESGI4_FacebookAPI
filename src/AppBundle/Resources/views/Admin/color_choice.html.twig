{% extends 'AppBundle:Admin:base.html.twig' %}

{% block title %}Couleur Admin{% endblock %}

{% block header %}Choix des couleurs{% endblock %}

{% block breadcumb %}
    <ol class="breadcrumb">
        <li>
            <a href="{{ path('site_home', {'project_name': site.username}) }}">
                <i class="fa fa-dashboard"></i> Mon site
            </a>
        </li>
        <li>
            <a href="{{ path('admin_index', {'project_name': site.username}) }}">
                <i class="fa fa-dashboard"></i> Admin
            </a>
        </li>
        <li class="active">Choisir ma couleur</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="box box-default">
        <div class="box-header with-border">
            <div class="box-header with-border"><h3 class="box-title">Palette des couleurs</h3></div>
            <div class="box box-solid" style="max-width: 300px;">
                <div class="box-body no-padding">
                    <table id="layout-skins-list" class="table table-striped bring-up nth-2-center">
                        <thead>
                        <tr>
                            <th>Previsualisation</th>
                            <th>Choisir</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for color in colors %}
                            <tr>
                                <td>
                                    <a data-skin="skin-{{ color[0] }}" class="btn {{ color[2] }} btn-xs btn-{{ color[0] }} btn-color">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                </td>
                                <td>
                                    <a data-skin="skin-{{ color[0] }}" class="btn {{ color[2] }} btn-xs btn-{{ color[0] }} btn-choice">
                                        Choix du {{ color[1] }}
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
        <div class="box-body">

        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
{% endblock %}


