{% extends 'AppBundle:Admin:base.html.twig' %}

{% block title %}Accueil Admin{% endblock %}

{% block header %}Mes albums{% endblock %}

{% block breadcumb %}
    <ol class="breadcrumb">
        <li>
            <a href="{{ path('site_home', {'project_name': site.username}) }}">
                <i class="fa fa-dashboard"></i> Mon site
            </a>
        </li>
        <li class="active">Admin</li>
    </ol>
{% endblock %}

{% block body %}

    {% for album in site.oAuthUser.albums %}
        <div class="post">
            <div class="user-block">
                <span class="username">
                          <a href={{ path('admin_album', {'project_name': site.username}) }}>{{ album.name }}</a>
                        </span>
                <span class="description">{{ album.pictures|length }} photos poste√©s </span>
            </div>

            {% if album.pictures|length > 0 %}

            <!-- /.user-block -->
            <div class="row margin-bottom">
                <div class="col-sm-6">
                    <img width="100%" class="img-responsive" src="{{ album.pictures.first.pictureLink }}" alt="Photo">
                </div>
                <!-- /.col -->
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-6">
                            {% if album.pictures.get(1) %}
                            <img width="100%" class="img-responsive" src="{{ album.pictures.get(1).pictureLink }}" alt="Photo">
                            {% endif %}
                            <br>
                            {% if album.pictures.get(2) %}
                            <img width="100%" class="img-responsive" src="{{ album.pictures.get(2).pictureLink }}" alt="Photo">
                            {% endif %}
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-6">
                            {% if album.pictures.get(3) %}
                            <img width="100%" class="img-responsive" src="{{ album.pictures.get(3).pictureLink }}" alt="Photo">
                            {% endif %}
                            <br>
                            {% if album.pictures.get(4) %}
                            <img width="100%" class="img-responsive" src="{{ album.pictures.get(4).pictureLink }}" alt="Photo">
                            {% endif %}
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.col -->
            </div>

            {% endif %}

            <!-- /.row -->
        </div>
    {% else %}
        <p> Aucun album </p>
    {% endfor %}

{% endblock %}


