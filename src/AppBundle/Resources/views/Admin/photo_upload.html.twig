{% extends 'AppBundle:Admin:base.html.twig' %}

{% block title %}Upload Admin{% endblock %}

{% block header %}Uploader une photo{% endblock %}

{% block breadcumb %}
    <ol class="breadcrumb">
        <li>
            <a href="{{ path('site_home', {'project_name': site.username}) }}">
                <i class="fa fa-dashboard"></i> Mon site
            </a>
        </li>
        <li>
            <a href="{{ path('admin_index', {'project_name': site.username}) }}">
                <i class="fa fa-dashboard"></i> Admin
            </a>
        </li>
        <li class="active">Uploader une photo</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Choix de l'album</h3>
        </div>
        <div class="box-body">
            <form action="{{ path('photo_upload', {'project_name': site.userName}) }}" method="post" enctype='multipart/form-data'>
                <div class="form-group">
                    <label for="album">Album Facebook</label>
                    <select name="album" id="album" class="form-control" required>
                        {% for album in albums %}
                            <option value="{{ album.field('id') }}">{{ album.field('name') }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="message">Description de la photo</label>
                    <input type="text" name="message" id="message" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="file" name="photo" id="photo" required>
                </div>
                <button type="submit" class="btn btn-default">Envoyer la photo</button>
            </form>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
{% endblock %}


