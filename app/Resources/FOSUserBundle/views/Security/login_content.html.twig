{% trans_default_domain 'FOSUserBundle' %}

<link rel="stylesheet" href="{{ asset('assets/bower/bootstrap/dist/css/bootstrap.css') }}">
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        {% endif %}

        <div class="form-group">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control">
        </div>

        <div class="form-group">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" id="password" name="_password" required="required"  class="form-control">
        </div>
        <div class="form-group">
            <label for="remember_me">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on"  class="form-control">
            </label>
        </div>

        <div class="form-group">
            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"  class="form-control">
        </div>
    </form>
</div>